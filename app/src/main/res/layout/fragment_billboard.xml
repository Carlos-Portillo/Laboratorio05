<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.movie.BillboardFragment">

    <data>
        <variable
            name="viewmodel"
            type="com.diegoarias.laboratorio05portillo.ui.movie.BillboardFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundLayout">


    <!-- TODO: Update blank fragment layout -->


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/medium_gap"
        android:layout_marginBottom="@dimen/medium_gap"
        android:clickable="true"
        android:contentDescription="Add New Movie"
        android:backgroundTint="@color/buttonColor"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/new_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_gap"
        android:text="Billboard"
        android:textSize="45sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/movie_card_view"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginStart="@dimen/medium_gap"
        android:layout_marginTop="@dimen/big_gap"
        android:layout_marginEnd="@dimen/medium_gap"
        android:backgroundTint="@color/cardLayout"
        app:cardCornerRadius="@dimen/medium_gap"
        app:layout_constraintEnd_toEndOf="@+id/new_title_text_view"
        app:layout_constraintStart_toStartOf="@+id/new_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/new_title_text_view" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/harry_potter_image_view"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_gap"
                android:src="@drawable/harry_potter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movie_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_gap"
                android:text="@string/movie_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/harry_potter_image_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/calification_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="9.8"
                android:textColor="@color/calification"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/harry_potter_image_view"
                app:layout_constraintTop_toBottomOf="@+id/movie_name_text_view"
                app:layout_constraintVertical_bias="0.272" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
